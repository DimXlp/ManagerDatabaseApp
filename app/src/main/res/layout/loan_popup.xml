<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loan_player_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="24dp">

    <TextView
        android:id="@+id/loan_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/chivo"
        android:text="Loan Details"
        android:textSize="20sp"
        android:textColor="#1F1F20"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"/>

    <!-- Type of Loan Picker -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/type_of_loan_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type of Loan"
        app:boxStrokeColor="#D4AF37"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/type_of_loan_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:text="Short-Term Loan"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:gravity="center_vertical"
            android:fontFamily="@font/chivo"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Team -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/team_loan_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Team"
        app:boxStrokeColor="#D4AF37"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/team_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chivo"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Year Loaned Picker -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/year_loaned_til"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="Year Loaned"
        app:boxStrokeColor="#D4AF37"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/year_loaned_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:clickable="true"
            android:inputType="none"
            android:drawableEnd="@drawable/ic_arrow_drop_down"
            android:gravity="center_vertical"
            android:fontFamily="@font/chivo"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Comments -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/comments_til_loan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Comments"
        app:boxStrokeColor="#D4AF37"
        app:boxStrokeWidth="2dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/comments_loan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/chivo"
            android:inputType="textMultiLine"
            android:lines="3"
            android:minLines="2"
            android:maxLines="10"
            android:gravity="top|start"
            android:textColor="@android:color/black" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Loan Button -->
    <Button
        android:id="@+id/loan_player_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/round_button"
        android:backgroundTint="#D4AF37"
        android:fontFamily="@font/chivo"
        android:text="Loan Player"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

</LinearLayout>
