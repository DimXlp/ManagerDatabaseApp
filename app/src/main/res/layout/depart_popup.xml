<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/transfer_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/chivo"
            android:text="Transfer Details"
            android:textSize="20sp"
            android:textColor="#1F1F20"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />

        <!-- Type of Transfer Picker -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/type_of_transfer_til_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of Transfer"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/type_of_transfer_picker_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black"
                android:text="Transfer to Another Team" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Transfer Fee -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/transfer_fee_til_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Transfer Fee"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/transfer_fee_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLines="1"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Player Exchange -->
        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/player_exchange_switch_depart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:text="Player Exchange"
            android:fontFamily="@font/chivo"
            android:textSize="16sp"
            android:textColor="#616161"
            android:textOn="Yes"
            android:textOff="No" />

        <!-- Team -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/team_left_til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Team"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/team_left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:maxLines="1"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Year Left Picker -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/year_left_picker_til_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Year Left"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/year_left_picker_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Comments -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/comments_til_depart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Comments"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/comments_depart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="10"
                android:minLines="2"
                android:gravity="top|start"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Transfer Button -->
        <Button
            android:id="@+id/transfer_player_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#D4AF37"
            android:fontFamily="@font/chivo"
            android:text="Transfer"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>
</ScrollView>
