<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:animateLayoutChanges="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="12dp">

            <!-- Player Number -->
            <TextView
                android:id="@+id/number_fpl"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:text="99"
                android:textAlignment="viewEnd"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true"
                android:gravity="center"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/line_fpl_1"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginStart="43dp"
                android:background="@drawable/line"
                android:backgroundTint="@color/colorPrimaryDark"/>

            <!-- Player Name -->
            <TextView
                android:id="@+id/full_name_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:text="First Last"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/line_fpl_1"
                android:layout_centerVertical="true"/>

            <ImageView
                android:id="@+id/position_oval_fpl"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="8dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/position_oval"
                android:layout_toStartOf="@+id/position_fpl"/>

            <TextView
                android:id="@+id/position_fpl"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/chivo"
                android:text="POS"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/details_fpl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/lighterGray"
            android:paddingHorizontal="8dp"
            android:paddingBottom="8dp">

            <TextView
                android:id="@+id/overall_text_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/chivo"
                android:text="OVR"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/overall_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/chivo"
                android:text="99"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/overall_text_fpl"/>

            <ImageView
                android:id="@+id/line_fpl_2"
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line"
                android:backgroundTint="@color/lighterGray"
                android:layout_toEndOf="@+id/overall_text_fpl"/>

            <TextView
                android:id="@+id/potential_text_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/chivo"
                android:text="POT"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_toEndOf="@id/line_fpl_2"/>

            <TextView
                android:id="@+id/potential_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/chivo"
                android:text="99-99"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/potential_text_fpl"
                android:layout_toEndOf="@+id/line_fpl_2"/>

            <ImageView
                android:id="@+id/line_fpl_3"
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line"
                android:backgroundTint="@color/lighterGray"
                android:layout_toEndOf="@+id/potential_fpl"/>

            <TextView
                android:id="@+id/nationality_text_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/chivo"
                android:text="NATL"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_toEndOf="@id/line_fpl_3"/>

            <TextView
                android:id="@+id/nationality_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/chivo"
                android:text="Country"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/nationality_text_fpl"
                android:layout_toEndOf="@+id/line_fpl_3"/>

            <TextView
                android:id="@+id/year_signed_text_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/chivo"
                android:text="YR SGN"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_below="@+id/overall_fpl" />

            <TextView
                android:id="@+id/year_signed_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/chivo"
                android:text="1993"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/year_signed_text_fpl"/>

            <ImageView
                android:id="@+id/line_fpl_4"
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line"
                android:backgroundTint="@color/lighterGray"
                android:layout_below="@+id/nationality_fpl"
                android:layout_toEndOf="@+id/year_signed_fpl"/>

            <TextView
                android:id="@+id/year_scouted_text_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/chivo"
                android:text="YR SCT"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_below="@+id/nationality_fpl"
                android:layout_toEndOf="@+id/line_fpl_4"/>

            <TextView
                android:id="@+id/year_scouted_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/chivo"
                android:text="1993"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/year_scouted_text_fpl"
                android:layout_toEndOf="@+id/line_fpl_4"/>

            <ImageView
                android:id="@+id/line_fpl_5"
                android:layout_width="1dp"
                android:layout_height="37dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/line"
                android:backgroundTint="@color/lighterGray"
                android:layout_below="@+id/nationality_fpl"
                android:layout_toEndOf="@+id/year_scouted_fpl"/>

            <TextView
                android:id="@+id/year_left_text_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/chivo"
                android:text="YR LFT"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:layout_below="@+id/nationality_fpl"
                android:layout_toEndOf="@+id/line_fpl_5"/>

            <TextView
                android:id="@+id/year_left_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/chivo"
                android:text="1993"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@+id/year_left_text_fpl"
                android:layout_toEndOf="@+id/line_fpl_5"/>

            <Button
                android:id="@+id/edit_button_fpl"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_edit"
                android:layout_below="@+id/year_scouted_fpl"/>

            <Button
                android:id="@+id/list_add_button_fpl"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/ic_add_list"
                android:layout_below="@+id/year_scouted_fpl"
                android:layout_toEndOf="@+id/edit_button_fpl"/>

            <Button
                android:id="@+id/delete_button_fpl"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:background="@android:drawable/ic_delete"
                android:backgroundTint="@color/colorAccent"
                android:layout_below="@+id/year_scouted_fpl"
                android:layout_toEndOf="@+id/list_add_button_fpl"/>


        </RelativeLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>