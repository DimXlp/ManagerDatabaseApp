<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top Row: Jersey Number + Full Name + 3-dot menu -->
        <LinearLayout
            android:id="@+id/player_top_bar_fpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="12dp"
            android:background="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/number_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/chivo" />

            <TextView
                android:id="@+id/full_name_fpl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Lionel Messi"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/chivo" />

            <ImageView
                android:id="@+id/player_action_menu_fpl"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_three_dots"
                android:contentDescription="Actions"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Expandable Section (initially hidden) -->
        <LinearLayout
            android:id="@+id/expandable_section_fpl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="@color/lighterGray">

            <LinearLayout
                android:id="@+id/player_basic_info_container_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/player_basic_text_fpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ST · 91 · 87–94"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/chivo" />

                <ImageView
                    android:id="@+id/player_flag_fpl"
                    android:layout_width="20dp"
                    android:layout_height="14dp"
                    android:layout_marginEnd="4dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Flag" />

                <TextView
                    android:id="@+id/player_nationality_fpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Argentina"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/chivo"
                    android:layout_marginStart="4dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/player_year_info_container_fpl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="4dp">

                <ImageView
                    android:id="@+id/year_signed_icon_fpl"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_year_signed"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/year_signed_text_fpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021/22"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/chivo"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/year_separator_1_fpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/chivo"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/year_scouted_icon_fpl"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_year_scouted"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/year_scouted_text_fpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021/22"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/chivo"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/year_separator_2_fpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="·"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/chivo"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <ImageView
                    android:id="@+id/year_left_icon_fpl"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_goodbye_fill"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="4dp"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/year_left_text_fpl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2021/22"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/chivo"
                    android:layout_gravity="center_vertical" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    
</androidx.cardview.widget.CardView>