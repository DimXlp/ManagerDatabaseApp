<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/transfer_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@android:color/white">

    <LinearLayout
        android:id="@+id/transfer_popup_buy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="24dp">

        <TextView
            android:id="@+id/new_transfer_title_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="New Transfer"
            android:textColor="#1F1F20"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/chivo"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Type of Transfer Picker -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/type_of_transfer_til_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Type of Transfer"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/type_of_transfer_picker_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black"
                android:text="Transfer from Another Team" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/transfer_fee_til_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="@string/transfer_fee"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/transfer_fee_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:inputType="number"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/plus_player_picker_til_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="+ Player"
            android:layout_marginTop="16dp"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/plus_player_picker_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black"
                android:text="None" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/wage_til_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/wage"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/wage_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:inputType="number"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/contract_years_til_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:hint="Contract Years"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/contract_years_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/chivo"
                android:inputType="number"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Year Signed Picker -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/year_signed_picker_til_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Year Signed"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/year_signed_picker_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:clickable="true"
                android:inputType="none"
                android:drawableEnd="@drawable/ic_arrow_drop_down"
                android:gravity="center_vertical"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Comments -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/comments_til_buy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Comments"
            app:boxStrokeColor="#D4AF37"
            app:boxStrokeWidth="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/comments_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:lines="3"
                android:maxLines="10"
                android:minLines="2"
                android:gravity="top|start"
                android:fontFamily="@font/chivo"
                android:textColor="@android:color/black" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/transfer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/round_button"
            android:backgroundTint="#D4AF37"
            android:text="Transfer Player"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="@font/chivo" />
    </LinearLayout>
</ScrollView>
