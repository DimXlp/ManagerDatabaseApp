<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/colorPrimaryDark"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true">

<androidx.constraintlayout.widget.ConstraintLayout
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp">

<!-- Manager's Name -->
<TextView
    android:id="@+id/manager_name_select"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:fontFamily="@font/chivo"
    android:text="Full Name"
    android:textColor="@android:color/white"
    android:textSize="22sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toStartOf="@+id/delete_button_select"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintHorizontal_bias="0.0" />

<!-- Team's Name -->
<TextView
    android:id="@+id/team_name_select"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:fontFamily="@font/chivo"
    android:text="Team FC"
    android:textSize="18sp"
    android:textColor="@android:color/white"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/manager_name_select"
    app:layout_constraintHorizontal_bias="0.0" />

<!-- Delete Button with Icon -->
    <Button
        android:id="@+id/delete_button_select"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:background="@android:drawable/ic_delete"
        android:backgroundTint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/manager_name_select"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.513" />

</androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
